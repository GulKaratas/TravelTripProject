@using TravelTripProject.Models.Class;
@model List<Blog>

<div class="card border-0 shadow-sm p-4 mb-4">
    <h4 class="fw-bold mb-4">En Popüler 10 Blog</h4>
    <div class="list-group list-group-flush">
        @{int i = 0;}
        @foreach (var x in Model)
        {
            <a href="/Blog/BlogDetalis/@x.Id" class="list-group-item list-group-item-action border-0 px-0 d-flex align-items-center">
                <span class="badge bg-primary rounded-pill me-3">@{i++;} @i</span>
                <span class="text-secondary fw-medium">@x.Baslik</span>
            </a>
        }
    </div>
    <div class="mt-4 text-center">
        <a href="/Blog/Index" class="btn btn-primary rounded-pill btn-sm">Tüm blogları gör</a>
    </div>
</div>
