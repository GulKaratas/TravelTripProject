@using TravelTripProject.Models.Class
@model List<Blog>

@foreach (var x in Model)
{
    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <img src="@x.BlogImage" class="card-img-top blog-post-img" alt="@x.Baslik">
            <div class="card-body">
                <h5 class="card-title fw-bold">@x.Baslik</h5>
                <p class="text-muted small mb-2"><i class="far fa-calendar-alt me-1"></i> @x.Tarih.ToString("dd.MM.yyyy")</p>
                <p class="card-text text-secondary">
                    @(x.Aciklama.Length > 100 ? x.Aciklama.Substring(0, 100) + "..." : x.Aciklama)
                </p>
                <a href="/Blog/BlogDetalis/@x.Id" class="btn btn-outline-primary btn-sm rounded-pill">Devamını Oku</a>
            </div>
        </div>
    </div>
}

@Html.Action("Partial2", "Index")
