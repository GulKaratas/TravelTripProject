@using TravelTripProject.Models.Class

@model List<Blog>


@foreach (var x in Model)
{
    <div class="con-bot">
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama.Substring(0,80)</p>
                <p><a href="/Blog/BlogDetalis/@x.Id"><span class="read">Devamını Oku>></span></a></p>
            </div>
        </div>
    </div>
}
