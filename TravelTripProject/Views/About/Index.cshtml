@using TravelTripProject.Models.Class
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="hero-section text-center mb-5" style="padding: 60px 0;">
    <div class="container">
        <h1 class="display-4 fw-bold">Biz Kimiz?</h1>
        <p class="lead">Hikayemiz, tutkumuz ve vizyonumuz.</p>
    </div>
</section>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @foreach (var x in Model)
            {
                <div class="card border-0 shadow-lg overflow-hidden mb-5">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-5">
                            <img src="@x.FotoUrl" class="img-fluid h-100" alt="Hakkımızda" style="object-fit: cover; min-height: 400px;">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body p-5">
                                <h2 class="section-title">Tatil Seyehat'e Hoşgeldiniz</h2>
                                <p class="lead text-secondary" style="line-height: 2;">
                                    @x.Aciklama
                                </p>
                                <div class="mt-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-primary-subtle p-2 rounded-circle me-3">
                                            <i class="fas fa-check text-primary"></i>
                                        </div>
                                        <span class="fw-medium">Güvenilir Seyahat Rehberi</span>
                                    </div>
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-primary-subtle p-2 rounded-circle me-3">
                                            <i class="fas fa-check text-primary"></i>
                                        </div>
                                        <span class="fw-medium">Güncel Blog İçerikleri</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-subtle p-2 rounded-circle me-3">
                                            <i class="fas fa-check text-primary"></i>
                                        </div>
                                        <span class="fw-medium">Yerel Deneyimler ve İpuçları</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
