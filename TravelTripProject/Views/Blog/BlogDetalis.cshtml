@model TravelTripProject.Models.Class.BlogComments

@{
    ViewBag.Title = "BlogDetalis";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            @foreach (var x in Model.Deger1)
            {
                <article class="blog-post mb-5">
                    <img src="@x.BlogImage" class="img-fluid rounded-4 shadow-sm mb-4 w-100" alt="@x.Baslik" style="max-height: 500px; object-fit: cover;">
                    <div class="d-flex align-items-center mb-3 text-muted">
                        <span class="badge bg-primary me-3">Seyahat</span>
                        <span><i class="far fa-calendar-alt me-1"></i> @x.Tarih.ToString("dd MMMM yyyy")</span>
                        <span class="ms-3"><i class="far fa-user me-1"></i> Admin</span>
                    </div>
                    <h1 class="display-5 fw-bold mb-4">@x.Baslik</h1>
                    <div class="blog-content lead text-secondary" style="line-height: 1.8;">
                        @x.Aciklama
                    </div>
                </article>
            }

            <div class="comments-section mt-5">
                <h3 class="fw-bold mb-4"><i class="far fa-comments me-2"></i> Yorumlar (@Model.Deger2.Count())</h3>
                @foreach (var x in Model.Deger2)
                {
                    <div class="comment-box d-flex shadow-sm">
                        <div class="flex-shrink-0">
                            <img src="~/web1/images/avatar.png" class="rounded-circle" alt="@x.KullaniciAdi" style="width: 50px; height: 50px;">
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="fw-bold mb-0">@x.KullaniciAdi</h6>
                                <small class="text-muted">Az önce</small>
                            </div>
                            <p class="mb-0 text-secondary">@x.Yorum</p>
                        </div>
                    </div>
                }

                <div class="mt-5">
                    @Html.Action("YorumYap", "Blog")
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <aside class="sticky-top" style="top: 100px;">
                <div class="card border-0 shadow-sm p-4 mb-4 bg-light">
                    <h5 class="fw-bold mb-3">Yazar Hakkında</h5>
                    <div class="text-center">
                        <img src="~/web1/images/avatar.png" class="rounded-circle mb-3 shadow-sm" style="width: 100px;">
                        <h6 class="fw-bold">Admin</h6>
                        <p class="small text-muted">Seyahat etmeyi seven, yeni yerler keşfetmekten hoşlanan bir blogger.</p>
                    </div>
                </div>

                <div class="card border-0 shadow-sm p-4 mb-4">
                    <h5 class="fw-bold mb-3">Popüler Yazılar</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var x in Model.Deger3.Take(5))
                        {
                            <li class="mb-3">
                                <a href="/Blog/BlogDetalis/@x.Id" class="text-decoration-none text-dark fw-medium small d-block">@x.Baslik</a>
                                <small class="text-muted">@x.Tarih.ToString("dd.MM.yyyy")</small>
                            </li>
                        }
                    </ul>
                </div>
            </aside>
        </div>
    </div>
</div>
