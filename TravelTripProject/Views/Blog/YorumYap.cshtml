@model TravelTripProject.Models.Class.Blog

<div class="card border-0 shadow-sm p-4 mt-4 bg-light">
    <h4 class="fw-bold mb-4"><i class="fas fa-pen-nib me-2 text-primary"></i>Bir Yorum Yapın</h4>
    
    <form method="post">
        @* BlogId gizli olmalı, kullanıcı görmemeli *@
        <input type="hidden" name="BlogId" value="@ViewBag.deger" />
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label small fw-bold text-muted">Kullanıcı Adı</label>
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0"><i class="far fa-user text-primary"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Adınız Soyadınız" name="KullaniciAdi" required />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label small fw-bold text-muted">E-posta</label>
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0"><i class="far fa-envelope text-primary"></i></span>
                    <input type="email" class="form-control border-start-0" placeholder="E-posta adresiniz" name="Mail" required />
                </div>
            </div>
        </div>
        
        <div class="mb-4">
            <label class="form-label small fw-bold text-muted">Yorumunuz</label>
            <textarea class="form-control shadow-sm" rows="5" placeholder="Düşüncelerinizi buraya yazın..." name="Yorum" required style="resize: none;"></textarea>
        </div>
        
        <div class="text-end">
            <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">
                Gönder <i class="fas fa-paper-plane ms-2"></i>
            </button>
        </div>
    </form>
</div>
