@model TravelTripProject.Models.Class.BlogComments

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="hero-section text-center mb-5" style="padding: 60px 0;">
    <div class="container">
        <h1 class="display-4 fw-bold">Gezi Günlükleri</h1>
        <p class="lead">Gezdiğimiz yerler, gördüğümüz güzellikler ve paylaştığımız anılar.</p>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                @foreach (var x in Model.Deger1)
                {
                    <div class="col-12 mb-5">
                        <article class="card border-0 shadow-sm overflow-hidden">
                            <div class="row g-0">
                                <div class="col-md-5">
                                    <img src="@x.BlogImage" class="img-fluid h-100" alt="@x.Baslik" style="object-fit: cover; min-height: 250px;">
                                </div>
                                <div class="col-md-7">
                                    <div class="card-body p-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="badge bg-primary me-2">Seyahat</span>
                                            <small class="text-muted"><i class="far fa-calendar-alt me-1"></i> @x.Tarih.ToString("dd MMMM yyyy")</small>
                                        </div>
                                        <h3 class="card-title fw-bold mb-3">
                                            <a href="/Blog/BlogDetalis/@x.Id" class="text-decoration-none text-dark">@x.Baslik</a>
                                        </h3>
                                        <p class="card-text text-secondary mb-4">
                                            @(x.Aciklama.Length > 150 ? x.Aciklama.Substring(0, 150) + "..." : x.Aciklama)
                                        </p>
                                        <a href="/Blog/BlogDetalis/@x.Id" class="btn btn-primary rounded-pill btn-sm">Devamını Oku <i class="fas fa-arrow-right ms-1"></i></a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <aside class="sticky-top" style="top: 100px;">
                <div class="card border-0 shadow-sm p-4 mb-4">
                    <h5 class="fw-bold mb-3">Son Bloglar</h5>
                    <div class="list-group list-group-flush">
                        @foreach (var x in Model.Deger3)
                        {
                            <a href="/Blog/BlogDetalis/@x.Id" class="list-group-item list-group-item-action border-0 px-0 d-flex align-items-start py-3">
                                <img src="@x.BlogImage" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                <div>
                                    <h6 class="mb-1 fw-bold" style="font-size: 0.9rem;">@x.Baslik</h6>
                                    <small class="text-muted">@x.Tarih.ToString("dd.MM.yyyy")</small>
                                </div>
                            </a>
                        }
                    </div>
                </div>

                <div class="card border-0 shadow-sm p-4">
                    <h5 class="fw-bold mb-3">Kategoriler</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-pill">Avrupa</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-pill">Asya</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-pill">Doğa</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-pill">Yemek</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-pill">Şehir Turu</a>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>
