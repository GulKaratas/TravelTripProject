@model TravelTripProject.Models.Class.Blog

@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card border-0 shadow-sm p-4">
    <h2 class="fw-bold mb-4 text-primary"><i class="fas fa-plus-circle me-2"></i>Yeni Blog Yazısı Ekle</h2>
    <hr class="mb-4">

    @using (Html.BeginForm("YeniBlog", "Admin", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-8 mb-3">
                <label class="form-label fw-bold">Blog Başlığı</label>
                @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control rounded-pill px-3 shadow-sm", placeholder = "Başlık giriniz..." })
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Tarih</label>
                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control rounded-pill px-3 shadow-sm", type = "date" })
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Blog Görsel URL</label>
            @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control rounded-pill px-3 shadow-sm", placeholder = "Görsel linkini yapıştırın..." })
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">İçerik</label>
            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control rounded-3 shadow-sm", rows = "10", placeholder = "Blog içeriğini buraya yazın..." })
        </div>

        <div class="text-end">
            <a href="/Admin/Index" class="btn btn-outline-secondary rounded-pill px-4 me-2">İptal</a>
            <button class="btn btn-primary rounded-pill px-5 shadow">
                <i class="fas fa-save me-2"></i>Kaydet ve Yayınla
            </button>
        </div>
    }
</div>
